<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light">

        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background_apptheme</item>
        <item name="actionModeBackground">@drawable/cab_background_top_example</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_example</item>



    </style>

    <style name="ActionBar.Solid.Apptheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
    <item name="background">@drawable/ab_solid_example</item>
    <item name="backgroundStacked">@drawable/ab_stacked_solid_example</item>
    <item name="backgroundSplit">@drawable/ab_bottom_solid_example</item>

</style>



<style name="ActionBar.Transparent.AppTheme" parent="@style/Widget.AppCompat.Light.ActionBar">
    <item name="background">@drawable/ab_transparent_example</item>
</style>


<style name="secondaryBackground">

        <item name="android:background">@drawable/background_fill</item>


    </style>

    <style name="PopupMenu.AppTheme" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_example</item>
    </style>

    <style name="DropDownListView.AppTheme" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_apptheme</item>
    </style>

    <style name="ActionBarTabStyle.AppTheme" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_example</item>
    </style>

    <style name="DropDownNav.AppTheme" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_apptheme</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_example</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_apptheme</item>
    </style>

    <style name="ProgressBar.AppTheme" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_apptheme</item>
    </style>

    <style name="ActionButton.CloseMode.AppTheme" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_example</item>
    </style>

    <style name="roundorangebutton">
        <item name="android:layout_width">94dp</item>
        <item name="android:layout_height">94dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_below">@+id/password</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="headingorange">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#e13e0D</item>
        <item name="android:fontFamily"></item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="standardorangebutton">
        <item name="android:layout_width">225dp</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:background">@color/dark_orange_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="LinkBlue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">#0F4146</item>
    </style>

    <style name="inputbackground">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>

        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">#E3dFDF</item>
    </style>

    <style name="inputtext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColorHint">#1C7995</item>
        <item name="android:ems">10</item>
    </style>


</resources>
